---
import { Icon } from 'astro-icon';
import { SOCIAL_MEDIA_ITEMS } from 'src/consts';

const styles = {
  socialMedia: 'fill-lightGrey-500 h-5 w-5',
  mail: 'fill-lightGrey-500 h-4 w-4',
}

---
<style lang="css">
  a:hover > [astro-icon] {
    fill: #78C7D0;
  }
</style>

<ul class="flex gap-4 items-center">
  { SOCIAL_MEDIA_ITEMS.map(icon => (
    <li>
      <a
        href={ icon.href }
        target="_blank"
        class="cursor-pointer transition-all ease-in-out duration-200"
        aria-label={ icon.description }
      >
        <Icon name={ icon.iconName } class={ icon.iconName === 'paper-plane' ? styles.mail : styles.socialMedia } />
      </a>
    </li>
  ))}
</ul>