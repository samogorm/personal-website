---
import FormattedDate from 'src/components/FormattedDate.astro';
import Tag from 'src/components/Tag.astro';

interface Props {
	slug: string;
	title: string;
	date: Date;
	tag: string;
	description: string;
}

const { title, slug, date, tag, description } = Astro.props;
---
<a href={`/posts/${slug}/`} class="bg-lightGrey-200 border-lightGrey-300 dark:bg-darkGrey-400 dark:border-darkGrey-300 p-4 border rounded flex flex-col hover:border-primary-500 transition-colors ease-in-out duration-200">
	<div class="flex justify-between mb-2">
		<Tag text={ tag } />
		<span class="text-xs dark:text-lightGrey-300">
			<FormattedDate date={ date } />
		</span>
	</div>
	<h3 class="font-mono text-xl dark:text-white">
		{ title }
	</h3>
	<p class="text-sm dark:text-lightGrey-400">
		{ description }
	</p>
</a>
